{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@middleware/*": ["middleware/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"]
    },
    "module": "commonjs",
    "target": "es2020",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules"]
}
